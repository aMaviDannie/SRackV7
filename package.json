{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Stencil project listing application build for DANNIE",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "author": {
    "name": "Alperen",
    "email": "a.mavitas@dannie.cc"
  },
  "devDependencies": {
    "electron": "^11.5.0",
    "electron-builder": "^22.0.0"
  },
  "build": {
    "appId": "com.myapp.id",
    "productName": "MyElectronApp",
    "files": [
      "dist/",
      "node_modules/",
      "main.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "linux": {
      "category": "Utility",
      "maintainer": "Your Name <your.email@example.com>",
      "target": [
        {
          "target": "deb",
          "arch": [
            "arm64"
          ]
        }
      ],
      "icon": "assets/icons/StencilRackAppIcon.png"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "icon": "assets/icons/icon.ico"
    }
  }
}
