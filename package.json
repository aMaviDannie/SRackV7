{
  "name": "my-electron-app",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "electron": "^24.0.0"
  },
  "devDependencies": {
    "electron-builder": "^23.0.0"
  },
  "build": {
    "appId": "com.myapp.id",
    "productName": "MyElectronApp",
    "files": [
      "dist/",
      "node_modules/",
      "main.js",
      "renderer.js",
      "index.html",
      "package.json"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ],
      "category": "Utility"
    }
  }
}